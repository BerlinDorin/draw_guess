.container{
    background-color:#FFFAFA;
    height: 100%;
}
.firstrow{
  background-color:#FFD700;
  height: 180rpx; 
}
.userinfo {
    margin-top: 20rpx;
    height: 180rpx;
    width: 100%;
   
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
    position: relative;
    left: 60rpx;
}
.userscore {
    margin-top: 20rpx;
    height: 180rpx;
    width: 100%;
    right: 50rpx;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    transition: all 300ms ease;
    position: relative;
   
}

.help_rank{
    background-color: white;
    width: 100%;
    height: 160rpx;
    margin-left: 50rpx;
    margin-right:50rpx; 
    display: flex;
    flex-direction: row;
    position: relative;
}

.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 32rpx;
    color: #007AFF;  
}

.userinfo-star {
    width: 50rpx;
    height: 50rpx;
}

.rowline{
    display: flex;
    flex-direction: row;
    height: 180rpx;
    width: 100%;
    justify-content: space-around;
      background-color:#FFD700;
}

.help{
    width: 80rpx;
    height:80rpx;
}
.rank{
    width:80rpx;
    height:80rpx;
}
.vertical-center{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 10rpx;
  
}
.secbutton{
    width: 120rpx;
    height:100%;
    background-color: #fff;
    border-color: #fff;
}
button::after{
border: none;
}
.button-createroom{
    text-shadow: 1px 1px 0.5px #FFDEAD;
    width: 80%;
    height:240rpx;  
    padding:8px;  
    background-color:#FFB90F;  
    border-color: #357ebd;  
    color: #fff;  
    -moz-border-radius: 10px;  
    -webkit-border-radius: 10px;  
    border-radius: 10px; /* future proofing */  
    -khtml-border-radius: 10px; /* for old Konqueror browsers */  
    text-align: center;  
    vertical-align: middle;  
    border: 1px solid transparent;  
    font-weight: 900;  
    font-size:220%  ;
    margin-top: 20rpx; 

}
.button-gallery{
    text-shadow: 1px 1px 0.5px #FFDEAD;
    width: 80%;
    height:240rpx;  
    padding:8px;  
    background-color:#FF6347;  
    border-color: #357ebd;  
    color: #fff;  
    -moz-border-radius: 10px;  
    -webkit-border-radius: 10px;  
    border-radius: 10px; /* future proofing */  
    -khtml-border-radius: 10px; /* for old Konqueror browsers */  
    text-align: center;  
    vertical-align: middle;  
    border: 1px solid transparent;  
    font-weight: 900;  
    font-size:220%;
    margin-top:30rpx; 
}

.line{
    padding: 15rpx;
    margin: 10rpx;
    line-height: 5rpx;
    border-left:400rpx solid #ddd;
    border-right:400rpx solid #ddd;
    text-align: center;
    color: #222;
}