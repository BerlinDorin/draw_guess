<view class="background">

  <swiper
    indicator-dots="false" 
    autoplay="true" 
    interval="5000" 
    duration="1000">
    <block wx:for="{{imgUrls}}" wx:key="*this">
      <swiper-item>
        <image 
          src="{{item}}" 
          class="slide-image" 
          width="355" 
          height="150"/>
      </swiper-item>
    </block>
  </swiper>

  <view class="waite">
    <image 
      class="waite-icon vertical-center" 
      src='/imgs/waite.jpeg'
    >
    </image>

    <text class="waite-text vertical-center">等待房主开始游戏</text>
    <button 
      class="exit-button vertical-center"
      type='mini'
      bindtap='quit'>退出</button>
  </view>

  <view class="section-title">
    小提示:房间满2人，房主即可开始游戏
  </view>

  <view class="room-owner">房主</view>

  <view class="player-icon">
    <view class="gamer-info">
      <image class='head' src="{{gamer1.avatarUrl}}" mode='aspectFit'>
      </image>
      <text class='nickName'>{{gamer1.nickName}}</text>
    </view>
    <view class="gamer-info">
      <image class='head' src='{{gamerCount > 1 ? gamer2.avatarUrl : defaultImg}}' mode='aspectFit'>
      </image>
      <text class='nickName'>{{gamerCount > 1 ? gamer2.nickName : defaultNickname}}</text>
    </view>
    <view class="gamer-info">
      <image class='head' src='{{gamerCount > 2 ? gamer3.avatarUrl : defaultImg}}' mode='aspectFit'>
      </image>
      <text class='nickName'>{{gamerCount > 2 ? gamer3.nickName : defaultNickname}}</text>
    </view>
    <view class="gamer-info">
      <image class='head' src='{{gamerCount > 3 ? gamer4.avatarUrl : defaultImg}}' mode='aspectFit'>
      </image>
      <text class='nickName'>{{gamerCount > 3 ? gamer4.nickName : defaultNickname}}</text>
    </view>
    <view class="gamer-info">
      <image class='head' src='{{gamerCount > 4 ? gamer5.avatarUrl : defaultImg}}' mode='aspectFit'>
      </image>
      <text class='nickName'>{{gamerCount > 4 ? gamer5.nickName : defaultNickname}}</text>
    </view>
    <view class="gamer-info">
      <image class='head' src='{{gamerCount > 5 ? gamer6.avatarUrl : defaultImg}}' mode='aspectFit'>
      </image>
      <text class='nickName'>{{gamerCount > 5 ? gamer6.nickName : defaultNickname}}</text>
    </view>
  </view>

  <view class="buttons">
    <button class="button-invite" bindtap='invateFriend'>邀请好友</button>
    <button class="button-start" bindtap='startGame'>开始游戏</button>
  </view>

  <view>
    <image src=''></image>
  </view>
</view>